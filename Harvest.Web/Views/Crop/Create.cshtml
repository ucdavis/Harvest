@model Harvest.Core.Domain.Crop

@{
    ViewData["Title"] = "Create";
}

<div class="card-wrapper col-md-6">
    <div class="card-content">
        <h2>Create Crop Lookup</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="Type">Type</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="Type" id="Type" value="@Project.CropTypes.Row" checked="checked" />
                        @Project.CropTypes.Row
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="Type" id="Type" value="@Project.CropTypes.Tree" />
                        @Project.CropTypes.Tree
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
