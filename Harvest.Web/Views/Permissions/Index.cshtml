@model Harvest.Web.Models.UserPermissionsListModel

@{
    ViewData["Title"] = "Role Assigned Users ";
}

<div class="row justify-content-between mb-3">
    <div class="col">
        <h1>Users with roles in team @Model.Team.Name</h1>
    </div>
    <div class="col text-right">
        <a class="btn btn-sm btn-primary" asp-action="Create">Add new User/Role <i class="fas fa-plus fa-xs"></i></a>
    </div>
</div>

<table id="permissions" class="table harvest-table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Roles
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserRoles)
        {
            <tr>
                <td>
                    @item.User.Name
                </td>
                <td>@Html.DisplayFor(a => item.User.Email)</td>
                <td>
                    @item.RolesList
                </td>
                <td>
                    @if (item.RolesList != "Worker")
                    {
                        <a class="mr-4" asp-action="Delete" asp-route-id="@item.User.Id"><i class="fas fa-trash-alt"></i> Remove Role(s)</a>
                    }
                    @if (item.SupervisorPermissionId != null)
                    {
                        <a asp-action="Details" asp-route-id="@item.SupervisorPermissionId"><i class="fas fa-edit"></i> Manage</a>
                    }
                    @if (item.WorkerPermissionId != null)
                    {
                        <a asp-action="Details" asp-route-id="@item.WorkerPermissionId"><i class="fas fa-edit"></i> Manage</a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>



@section Styles
{
    @{
        await Html.RenderPartialAsync("_ReportStylesPartial");
    }
    @{
        await Html.RenderPartialAsync("_FaStylesPartial");
    }
}

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ReportScriptsPartial");
    }

    <script type="text/javascript">
        var table = $('#permissions').DataTable({
          responsive: true,
          columnDefs: [
            { responsivePriority: 1, targets: 0 },
            { responsivePriority: 2, targets: 1 },
            { responsivePriority: 3, targets: 2 },
            { responsivePriority: 4, targets: 3 }
          ]
        });
    </script>
}