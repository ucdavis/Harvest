@model Project[]

<a asp-action="Create">Create new</a>

<table id="projects" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id">@project.Name</a>
                </td>
                <td>@project.Status</td>
            </tr>
        }
    </tbody>
</table>

@section Styles
{
  @{ await Html.RenderPartialAsync("_ReportStylesPartial");}
}

@section Scripts
{
  @{ await Html.RenderPartialAsync("_ReportScriptsPartial");}

  <script type="text/javascript">
    var table = $('#projects').DataTable({
      responsive: true
    });
  </script>
}