@{
    ViewBag.Title = "Help";
}
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
    <div class="card h-100 shadow-sm">
      <div class="card-body d-flex flex-column">
        <h2 class="card-title h5 mb-2">Question about your project or billing?</h2>
        <p class="card-text mb-4">Please open your project and submit a ticket from there.</p>
        <a href="/project/mine" class="btn btn-sm btn-primary mt-auto align-self-start">
          Open My Projects
        </a>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card h-100 shadow-sm">
      <div class="card-body d-flex flex-column">
        <h2 class="card-title h5 mb-2">Have a technical support question?</h2>
        <p class="card-text mb-4">Please submit a help ticket here:</p>
        <a
          href="https://caeshelp.ucdavis.edu/?appname=Harvest"
          class="btn btn-sm btn-primary mt-auto align-self-start"
          target="_blank"
          rel="noopener noreferrer"
        >
          Help Ticket
        </a>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card h-100 shadow-sm">
      <div class="card-body d-flex flex-column">
        <h2 class="card-title h5 mb-2">Want to learn more?</h2>
        <p class="card-text mb-4">Click here to see training videos, guides, and other information:</p>
        <a
          href="https://computing.caes.ucdavis.edu/documentation/harvest"
          class="btn btn-sm btn-primary mt-auto align-self-start"
          target="_blank"
          rel="noopener noreferrer"
        >
          Harvest Documentation
        </a>
      </div>
    </div>
  </div>
</div>




