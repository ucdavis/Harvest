@model Harvest.Web.Models.EmulateUserViewModel

@{
    ViewBag.Title = "Emulate User";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Search" class="control-label">Email or Kerb</label>
        <input asp-for="Search" class="form-control"/>
        <span asp-validation-for="Search" class="text-danger"></span>
    </div>
    <input type="submit" value="Emulate User" class="btn btn-primary" />
</form>